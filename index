    <script>
        // Header scroll effect
        window.addEventListener('scroll', function() {
            const header = document.getElementById('header');
            if (window.scrollY > 50) {
                header.style.padding = "10px 0";
                header.style.backgroundColor = "white";
                header.style.boxShadow = "0 2px 15px rgba(0, 0, 0, 0.1)";
            } else {
                header.style.padding = "15px 0";
                header.style.backgroundColor = "white";
                header.style.boxShadow = "0 2px 15px rgba(0, 0, 0, 0.1)";
            }
        });
        
        // Mobile menu functionality
        const mobileMenu = document.getElementById('mobile-menu');
        const navMenu = document.querySelector('.nav-menu');
        
        mobileMenu.addEventListener('click', function() {
            this.classList.toggle('active');
            navMenu.classList.toggle('active');
        });
        
        // Close mobile menu when clicking on links
        document.querySelectorAll('.nav-menu a').forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.remove('active');
                navMenu.classList.remove('active');
            });
        });
        
        // Accordion functionality
        document.querySelectorAll('.accordion-header').forEach(header => {
            header.addEventListener('click', () => {
                const content = header.nextElementSibling;
                const icon = header.querySelector('i');
                
                // Cerrar otros acordeones abiertos
                document.querySelectorAll('.accordion-content').forEach(item => {
                    if (item !== content && item.classList.contains('active')) {
                        item.classList.remove('active');
                        item.previousElementSibling.querySelector('i').style.transform = 'rotate(0deg)';
                    }
                });
                
                // Toggle active class
                content.classList.toggle('active');
                
                // Rotate icon
                if (content.classList.contains('active')) {
                    icon.style.transform = 'rotate(180deg)';
                } else {
                    icon.style.transform = 'rotate(0deg)';
                }
            });
        });
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Efecto de máquina de escribir para el título
        document.addEventListener('DOMContentLoaded', function() {
            const heroTitle = document.querySelector('.hero-title');
            if (heroTitle) {
                const originalText = heroTitle.textContent;
                heroTitle.textContent = '';
                let i = 0;
                
                function typeWriter() {
                    if (i < originalText.length) {
                        heroTitle.textContent += originalText.charAt(i);
                        i++;
                        setTimeout(typeWriter, 50);
                    }
                }
                
                setTimeout(typeWriter, 300);
            }
        });
        
        // Form submission handling
        document.getElementById('valuationForm').addEventListener('submit', function(e) {
            // El formulario ahora es funcional y se enviará a FormSubmit
            // No necesitamos prevenir el comportamiento por defecto
            // Solo mostrar un mensaje de confirmación
            alert('¡Gracias por su solicitud! Nos pondremos en contacto con usted en breve.');
        });
        
        // YouTube Video Loader - MEJORADO
        document.addEventListener('DOMContentLoaded', function() {
            const videoPlaceholder = document.getElementById('youtube-video');
            if (videoPlaceholder) {
                videoPlaceholder.addEventListener('click', function() {
                    // Crear iframe cuando se hace clic
                    const iframe = document.createElement('iframe');
                    iframe.setAttribute('src', 'https://www.youtube.com/embed/CUxSdgSNPW4?autoplay=1');
                    iframe.setAttribute('frameborder', '0');
                    iframe.setAttribute('allow', 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share');
                    iframe.setAttribute('allowfullscreen', '');
                    iframe.style.width = '100%';
                    iframe.style.height = '100%';
                    iframe.style.position = 'absolute';
                    iframe.style.top = '0';
                    iframe.style.left = '0';
                    
                    // Reemplazar placeholder con iframe
                    videoPlaceholder.innerHTML = '';
                    videoPlaceholder.appendChild(iframe);
                    videoPlaceholder.classList.add('loaded');
                });
            }
        });

        // Galería de imágenes - NUEVO
        document.addEventListener('DOMContentLoaded', function() {
            // Definir las galerías de imágenes
            const galleries = {
                'Vaciado de pisos en Barcelona': {
                    title: 'Vaciado de pisos en Barcelona',
                    images: [
                        { src: 'https://images.unsplash.com/photo-1584622650111-993a426fbf0a?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&h=800&q=80', caption: 'Vaciado completo en Eixample' },
                        { src: 'https://images.unsplash.com/photo-1560448204-603b3fc33ddc?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&h=800&q=80', caption: 'Proceso de vaciado profesional' },
                        { src: 'https://images.unsplash.com/photo-1560448204-5c6c3ce63c0a?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&h=800&q=80', caption: 'Resultado final - Piso vacío' },
                        { src: 'https://images.unsplash.com/photo-1560448205-4c7d6c00f0a5?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&h=800&q=80', caption: 'Gestión de residuos responsable' }
                    ]
                },
                'limpieza síndrome de diógenes': {
                    title: 'Limpieza síndrome de Diógenes',
                    images: [
                        { src: 'https://images.unsplash.com/photo-1595428774223-ef52624120d2?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&h=800&q=80', caption: 'Limpieza especializada Diógenes' },
                        { src: 'https://images.unsplash.com/photo-1595428774223-ef52624120d3?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&h=800&q=80', caption: 'Proceso de limpieza y desinfección' },
                        { src: 'https://images.unsplash.com/photo-1595428774223-ef52624120d4?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&h=800&q=80', caption: 'Resultado final - Vivienda habitable' },
                        { src: 'https://images.unsplash.com/photo-1595428774223-ef52624120d5?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&h=800&q=80', caption: 'Gestión de objetos y residuos' }
                    ]
                },
                'Trabajos de pintura y manitas': {
                    title: 'Trabajos de pintura y manitas',
                    images: [
                        { src: 'https://images.unsplash.com/photo-1560448204-603b3fc33ddc?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&h=800&q=80', caption: 'Trabajos de pintura profesional' },
                        { src: 'https://images.unsplash.com/photo-1560448204-603b3fc33ddb?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&h=800&q=80', caption: 'Preparación de superficies' },
                        { src: 'https://images.unsplash.com/photo-1560448204-603b3fc33dd9?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&h=800&极速q=80', caption: 'Aplicación de pintura de calidad' },
                        { src: 'https://images.unsplash.com/photo-1560448204-603b3fc33dd8?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&h=800&q=80', caption: 'Resultado final - Acabado impecable' }
                    ]
                }
            };

            // Elementos del modal
            const modal = document.getElementById('gallery-modal');
            const closeModal = document.querySelector('.close-modal');
            const modalSlides = document.querySelector('.modal-slides');
            const modalThumbnails = document.querySelector('.modal-thumbnails');
            const prevButton = document.querySelector('.modal-prev');
            const nextButton = document.querySelector('.modal-next');
            
            let currentGallery = null;
            let currentIndex = 0;

            // Abrir modal al hacer clic en una imagen de la galería
            document.querySelectorAll('.gallery-item').forEach(item => {
                item.addEventListener('click', function() {
                    const galleryId = this.getAttribute('data-gallery');
                    if (galleries[galleryId]) {
                        openGallery(galleryId);
                    }
                });
            });

            // Cerrar modal
            closeModal.addEventListener('click', closeGallery);
            modal.addEventListener('click', function(e) {
                if (e.target === modal) {
                    closeGallery();
                }
            });

            // Navegación
            prevButton.addEventListener('click', showPrevSlide);
            nextButton.addEventListener('click', showNextSlide);

            // Teclado
            document.addEventListener('keydown', function(e) {
                if (modal.style.display === 'block') {
                    if (e.key === 'Escape') closeGallery();
                    if (e.key === 'ArrowLeft') showPrevSlide();
                    if (e.key === 'ArrowRight') showNextSlide();
                }
            });

            // Funciones de la galería
            function openGallery(galleryId) {
                currentGallery = galleries[galleryId];
                currentIndex = 0;
                
                // Limpiar slides y thumbnails
                modalSlides.innerHTML = '';
                modalThumbnails.innerHTML = '';
                
                // Crear slides y thumbnails
                currentGallery.images.forEach((image, index) => {
                    // Slide
                    const slide = document.createElement('div');
                    slide.className = 'modal-slide';
                    if (index === 0) slide.classList.add('active');
                    
                    const img = document.createElement('img');
                    img.src = image.src;
                    img.alt = image.caption;
                    img.className = 'modal-image';
                    
                    const caption = document.createElement('div');
                    caption.className = 'modal-caption';
                    caption.textContent = image.caption;
                    
                    slide.appendChild(img);
                    slide.appendChild(caption);
                    modalSlides.appendChild(slide);
                    
                    // Thumbnail
                    const thumb = document.createElement('img');
                    thumb.src = image.src;
                    thumb.alt = image.caption;
                    thumb.className = 'modal-thumb';
                    if (index === 0) thumb.classList.add('active');
                    
                    thumb.addEventListener('click', () => {
                        showSlide(index);
                    });
                    
                    modalThumbnails.appendChild(thumb);
                });
                
                // Mostrar modal
                modal.style.display = 'block';
                document.body.style.overflow = 'hidden';
            }

            function closeGallery() {
                modal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }

            function showSlide(index) {
                // Validar índice
                if (index < 0) index = currentGallery.images.length - 1;
                if (index >= currentGallery.images.length) index = 0;
                
                // Ocultar slide actual
                document.querySelectorAll('.modal-slide').forEach(slide => {
                    slide.classList.remove('active');
                });
                
                // Mostrar nuevo slide
                document.querySelectorAll('.modal-slide')[index].classList.add('active');
                
                // Actualizar thumbnails
                document.querySelectorAll('.modal-thumb').forEach((thumb, i) => {
                    if (i === index) {
                        thumb.classList.add('active');
                    } else {
                        thumb.classList.remove('active');
                    }
                });
                
                currentIndex = index;
            }

            function showPrevSlide() {
                showSlide(currentIndex - 1);
            }

            function showNextSlide() {
                showSlide(currentIndex + 1);
            }
        });
    </script>
</body>
</html>
